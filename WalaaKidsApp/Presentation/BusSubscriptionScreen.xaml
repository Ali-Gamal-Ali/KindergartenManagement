<UserControl x:Class="WalaaKidsApp.Presentation.BusSubscriptionScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WalaaKidsApp.Presentation"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:enums="clr-namespace:WalaaKidsApp.Business.Enums"
             mc:Ignorable="d" 
             x:Name="BusSubscriptionUserControl"
             FlowDirection="RightToLeft"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="Transparent"
             Opacity="0"
             d:Opacity="1"
             d:DesignWidth="800" d:DesignHeight="800"
             d:Background="#eff2f7"
             Loaded="BusSubscriptionUserControl_Loaded"
 >
    <UserControl.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation 
             Storyboard.TargetProperty="Opacity"
        Storyboard.TargetName="BusSubscriptionUserControl"
             From="0" To="1"
             Duration="0:0:0.4" />
        </Storyboard>
        <ObjectDataProvider MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}"
                            x:Key="SubscriptionTypes">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:SubscriptionType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <GroupBox x:Name="SubscriptionDetailsGroupBox"
              BorderThickness="1" 
              Header="تفاصيل الاشتراك" 
               TabIndex="0"
              >
            <GroupBox.BorderBrush>
                <LinearGradientBrush>
                    <GradientStop Color="#662D8C" Offset="1"/>
                    <GradientStop Color="#ED1E79" Offset=".1"/>
                </LinearGradientBrush>
            </GroupBox.BorderBrush>
            <Grid Margin="10 10 0 0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock  Grid.Column="0"
                 Grid.Row="0"
                 Style="{StaticResource InputLabel}"
                 Text="تاريخ الاشتراك :"
                 HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource InputLabel}"
                 Text="نوع الاشتراك :"
                 HorizontalAlignment="Right"/>

                <TextBlock  Grid.Column="0"
                  Grid.Row="2"
                  Style="{StaticResource InputLabel}"
                  Text="تاريخ انتهاء الاشتراك :"
                  HorizontalAlignment="Right"/>
                
                <DatePicker 
                    Margin="0 20 0 20" 
                    Grid.Column="1" 
                    TabIndex="0"
                    Grid.Row="0" 
                    Width="200"
                    SelectedDate="{Binding Path=SubscriptionDate, UpdateSourceTrigger=PropertyChanged}"
                    />
                <DatePicker 
                    Margin="0 20 0 20" 
                    Grid.Column="1" 
                    TabIndex="0"
                    Grid.Row="2" 
                    Width="200"
                    SelectedDate="{Binding Path=SubscriptionExpiryDate, UpdateSourceTrigger=PropertyChanged}"
                   />
                <ComboBox 
                    Height="30" 
                    Margin="0 20 0 20" 
                    Grid.Column="1" 
                    Grid.Row="1" 
                    TabIndex="1"
                    VerticalContentAlignment="Center"
                    SelectedIndex="1"
                    ItemsSource="{Binding Source={StaticResource SubscriptionTypes}}"
                    SelectedItem="{Binding SubscriptionType, Mode=OneWayToSource}"/>

                <Button Grid.Row="3"  Name="SaveButton"
                    Content="حفظ"
                    Style="{StaticResource ContentButton}" 
                    HorizontalAlignment="Left"
                    Grid.ColumnSpan="2"
                        TabIndex="5" Click="SaveButton_Click"
                    >
                </Button>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
