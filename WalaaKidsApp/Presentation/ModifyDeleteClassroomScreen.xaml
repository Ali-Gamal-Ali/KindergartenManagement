<UserControl x:Class="WalaaKidsApp.Presentation.ModifyDeleteClassroomScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WalaaKidsApp.Presentation"
             mc:Ignorable="d" 
             x:Name="ModifyDeleteClassroomUserControl"
             FlowDirection="RightToLeft"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="Transparent"
             Opacity="0"
             d:Opacity="1"
             d:DesignWidth="800" d:DesignHeight="800"
             d:Background="#eff2f7"
             Loaded="ModifyDeleteClassroomUserControl_Loaded">
    <UserControl.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation 
                Storyboard.TargetProperty="Opacity"
           Storyboard.TargetName="ModifyDeleteClassroomUserControl"
                From="0" To="1"
                Duration="0:0:0.4" />
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <GroupBox x:Name="StudentDetailsGroupBox"
              RenderTransformOrigin="0,0" 
              BorderThickness="1" 
              Header="تعديل / حذف فصل" 
              >
            <GroupBox.BorderBrush>
                <LinearGradientBrush>
                    <GradientStop Color="#662D8C" Offset="1"/>
                    <GradientStop Color="#ED1E79" Offset=".1"/>
                </LinearGradientBrush>
            </GroupBox.BorderBrush>
            <Grid Margin="10 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock  Grid.Column="0"
                 Grid.Row="0"
                 Style="{StaticResource InputLabel}"
                 Text="الفصل :"
                 HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource InputLabel}"
        Text="الاسم الجديد :"
        HorizontalAlignment="Right"/>

                <TextBox x:Name="ClassroomNameTextBox" 
                         TabIndex="1" 
                         Margin="0 20 0 20" 
                         Grid.Column="1" 
                         Grid.Row="1"
                         Width="200" 
                         />
                <ComboBox Grid.Row="0" Grid.Column="1" 
                          x:Name="ClassroomsBox"
                          Height="30"
                          ItemsSource="{Binding Classrooms}"
                          TabIndex="0"
                          SelectedIndex="0"
                          VerticalContentAlignment="Center"
                          VerticalAlignment="Center">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Rectangle Width="16" Height="16" Margin="0,0,5,0" Fill="{Binding ColorBrush}"  Stroke="Black"/>
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                            Orientation="Horizontal">
                    <Button x:Name="ChangeNameButton" TabIndex="2"
                        Margin="0 20 0 0"
                    Grid.Row="2" 
                    Content="تغيير الاسم"
                    Style="{StaticResource ContentButton}" 
                    HorizontalAlignment="Left"
                    Grid.ColumnSpan="2" Click="ChangeNameButton_Click" 
                    >
                    </Button>
                    <Button x:Name="DeleteButton"  TabIndex="2"
                             Margin="10 20 0 0"
                             Grid.Row="2" 
                             Content="حذف الفصل"
                             Style="{StaticResource ContentButton}" Click="DeleteButton_Click" />
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
