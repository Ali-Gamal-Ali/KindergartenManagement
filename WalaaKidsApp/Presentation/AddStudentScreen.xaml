<UserControl x:Class="WalaaKidsApp.Presentation.AddStudentScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WalaaKidsApp.Presentation"
             xmlns:enums="clr-namespace:WalaaKidsApp.Business.Enums"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             x:Name="AddStudentUserControl"
             FlowDirection="RightToLeft"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="Transparent"
             Opacity="0"
             d:Opacity="1"
             d:DesignWidth="800" d:DesignHeight="800"
             d:Background="#eff2f7"
             Loaded="UserControl_Loaded"
             >
    <UserControl.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation 
                     Storyboard.TargetProperty="Opacity"
                Storyboard.TargetName="AddStudentUserControl"
                     From="0" To="1"
                     Duration="0:0:0.4" />
        </Storyboard>
        <ObjectDataProvider MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}"
                            x:Key="SubscriptionTypes">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:SubscriptionType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <GroupBox x:Name="StudentDetailsGroupBox"
              RenderTransformOrigin="0,0" 
              BorderThickness="1" 
              Header="تفاصيل الطالب" 
              d:Visibility="Visible"
                  Visibility="Visible"
              >
            <GroupBox.BorderBrush>
                <LinearGradientBrush>
                    <GradientStop Color="#662D8C" Offset="1"/>
                    <GradientStop Color="#ED1E79" Offset=".1"/>
                </LinearGradientBrush>
            </GroupBox.BorderBrush>
            <d:GroupBox.RenderTransform>
                <TranslateTransform X="0" Y="-500"/>
            </d:GroupBox.RenderTransform>
            <Grid Margin="10 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock  Grid.Column="0"
                 Grid.Row="0"
                 Style="{StaticResource InputLabel}"
                 Text="الرقم القومي :"
                 HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource InputLabel}"
        Text="الاسم :"
        HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="3" Style="{StaticResource InputLabel}"
        Text="السن :"
        HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource InputLabel}"
        Text="تاريخ الميلاد :"
        HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="4" Style="{StaticResource InputLabel}"
        Text="النوع :"
        HorizontalAlignment="Right"/>

                <TextBox x:Name="NationalIdTextBox" TabIndex="0" Margin="0 20 0 20" Grid.Column="1" Grid.Row="0" Width="200" Text="{Binding Path=NationalId, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>
                <Popup PlacementTarget="{Binding ElementName=NationalIdTextBox}"
                    Placement="Right"
                    AllowsTransparency="True"
                    StaysOpen="True"
                    IsOpen="{Binding Mode=OneWay, ElementName=NationalIdTextBox,Path=(Validation.Errors).Count,Converter={StaticResource CountToBoolConverter}}">
                    <Border Background="LightPink" BorderBrush="Red" BorderThickness="1" Padding="4">
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=NationalIdTextBox}" />
                    </Border>
                </Popup>
                <TextBox  x:Name="StudentNameTextBox" TabIndex="1" Margin="0 20 0 20" Grid.Column="1" Grid.Row="1" Text="{Binding Path=StudentName, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>
                <Popup PlacementTarget="{Binding ElementName=StudentNameTextBox}"
                   Placement="Right"
                   AllowsTransparency="True"
                   StaysOpen="True"
                   IsOpen="{Binding Mode=OneWay, ElementName=StudentNameTextBox,Path=(Validation.Errors).Count,Converter={StaticResource CountToBoolConverter}}">
                    <Border Background="LightPink" BorderBrush="Red" BorderThickness="1" Padding="4">
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=StudentNameTextBox}" />
                    </Border>
                </Popup>
                <TextBox x:Name="AgeTextBox" IsEnabled="False"  Margin="0 20 0 20" Grid.Column="1" Grid.Row="3" Text="{Binding Path=Age, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>
                <TextBox Margin="0 20 0 20" IsEnabled="False" Grid.Column="1" Grid.Row="2" Text="{Binding Path=DateOfBirth, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>
                <TextBox IsEnabled="False" Margin="0 20 0 20" Grid.Column="1" Grid.Row="4" Text="{Binding Path=Gender, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>
                <Button x:Name="NextButton1" TabIndex="2"
                        Click="NextButton1_Click"
                    Grid.Row="5" 
                    Content="التالي"
                    Style="{StaticResource ContentButton}" 
                    HorizontalAlignment="Left"
                    Grid.ColumnSpan="2"
                    >
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource AddStudentConverter}">
                            <Binding ElementName="NationalIdTextBox" Path="(Validation.HasError)"/>
                            <Binding ElementName="StudentNameTextBox" Path="(Validation.HasError)"/>
                            <Binding ElementName="NationalIdTextBox" Path="Text"/>
                            <Binding ElementName="StudentNameTextBox" Path="Text"/>
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>

            </Grid>

        </GroupBox>
        <GroupBox x:Name="GuardianDetailsGroupBox"
              RenderTransformOrigin="0,0" 
              BorderThickness="1" 
                  
              Header="تفاصيل ولي الأمر" 
                  Visibility="Hidden"
                  d:Visibility="Visible"
                  
              >
            <GroupBox.BorderBrush>
                <LinearGradientBrush>
                    <GradientStop Color="#662D8C" Offset="1"/>
                    <GradientStop Color="#ED1E79" Offset=".1"/>
                </LinearGradientBrush>
            </GroupBox.BorderBrush>
            <d:GroupBox.RenderTransform>
                <TranslateTransform X="0" Y="500"/>
            </d:GroupBox.RenderTransform>
            <Grid Margin="10 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock  Grid.Column="0"
                 Grid.Row="0"
                 Style="{StaticResource InputLabel}"
                 Text="اسم الأب :"
                 HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource InputLabel}"
                 Text="اسم الأم :"
                 HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource InputLabel}"
                 Text="رقم تليفون :"
                 HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="3" Style="{StaticResource InputLabel}"
                 Text="رقم تليفون اخر :"
                 HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="4" Style="{StaticResource InputLabel}"
                 Text="الوظيفة :"
                 HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="5" Style="{StaticResource InputLabel}"
                           Text="العنوان :"
                           HorizontalAlignment="Right"/>
                <TextBox x:Name="FatherNameTextBox" TabIndex="0" Margin="0 20 0 20" Grid.Column="1" Grid.Row="0" Width="200" 
                         Text="{Binding Path=FatherName, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>

                <Popup PlacementTarget="{Binding ElementName=FatherNameTextBox}"
                    Placement="Right"
                    AllowsTransparency="True"
                    StaysOpen="True"
                    IsOpen="{Binding Mode=OneWay, ElementName=FatherNameTextBox,Path=(Validation.Errors).Count,Converter={StaticResource CountToBoolConverter}}">
                    <Border Background="LightPink" BorderBrush="Red" BorderThickness="1" Padding="4">
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=FatherNameTextBox}" />
                    </Border>
                </Popup>
                <TextBox  x:Name="MotherNameTextBox" TabIndex="1"
                    Margin="0 20 0 20" Grid.Column="1" Grid.Row="1"
                          Text="{Binding Path=MotherName, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>
                <Popup PlacementTarget="{Binding ElementName=MotherNameTextBox}"
                   Placement="Right"
                   AllowsTransparency="True"
                   StaysOpen="True"
                   IsOpen="{Binding Mode=OneWay, ElementName=MotherNameTextBox,Path=(Validation.Errors).Count,Converter={StaticResource CountToBoolConverter}}">
                    <Border Background="LightPink" BorderBrush="Red" BorderThickness="1" Padding="4">
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=MotherNameTextBox}" />
                    </Border>
                </Popup>

                <TextBox x:Name="PrimaryPhoneBox" 
                         Margin="0 20 0 20" TabIndex="2" 
                         Grid.Column="1" Grid.Row="2"
                         Text="{Binding Path=PrimaryPhoneNumber, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>

                <Popup PlacementTarget="{Binding ElementName=PrimaryPhoneBox}"
                       Placement="Right"
                       AllowsTransparency="True"
                       StaysOpen="True"
                       IsOpen="{Binding Mode=OneWay, ElementName=PrimaryPhoneBox,Path=(Validation.Errors).Count,Converter={StaticResource CountToBoolConverter}}">
                    <Border Background="LightPink" BorderBrush="Red" BorderThickness="1" Padding="4">
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=PrimaryPhoneBox}" />
                    </Border>
                </Popup>

                <TextBox x:Name="SecondaryPhoneTextBox" TabIndex="3"
                    Margin="0 20 0 20" Grid.Column="1" 
                         Grid.Row="3"
                         Text="{Binding Path=SecondaryPhoneNumber, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>

                <Popup PlacementTarget="{Binding ElementName=SecondaryPhoneTextBox}"
                        Placement="Right"
                        AllowsTransparency="True"
                        StaysOpen="True"
                        IsOpen="{Binding Mode=OneWay, ElementName=SecondaryPhoneTextBox,Path=(Validation.Errors).Count,Converter={StaticResource CountToBoolConverter}}">
                    <Border Background="LightPink" BorderBrush="Red" BorderThickness="1" Padding="4">
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=SecondaryPhoneTextBox}" />
                    </Border>
                </Popup>

               
                
                <TextBox x:Name="FatherJobTextBox" TabIndex="4"
                    Margin="0 20 0 20" 
                         Grid.Column="1" 
                         Grid.Row="4"
                         Text="{Binding Path=FatherJob, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>

                <Popup PlacementTarget="{Binding ElementName=FatherJobTextBox}"
         Placement="Right"
         AllowsTransparency="True"
         StaysOpen="True"
         IsOpen="{Binding Mode=OneWay, ElementName=FatherJobTextBox,Path=(Validation.Errors).Count,Converter={StaticResource CountToBoolConverter}}">
                    <Border Background="LightPink" BorderBrush="Red" BorderThickness="1" Padding="4">
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=FatherJobTextBox}" />
                    </Border>
                </Popup>
                
                
                <TextBox x:Name="AddressTextBox" TabIndex="5"
                    Margin="0 20 0 20" 
                    Grid.Column="1" 
                    Grid.Row="5"
                    Text="{Binding Path=Address, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>

                <Popup PlacementTarget="{Binding ElementName=AddressTextBox}"
                       Placement="Right"
                       AllowsTransparency="True"
                       StaysOpen="True"
                       IsOpen="{Binding Mode=OneWay, ElementName=AddressTextBox,Path=(Validation.Errors).Count,Converter={StaticResource CountToBoolConverter}}">
                    <Border Background="LightPink" BorderBrush="Red" BorderThickness="1" Padding="4">
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=AddressTextBox}" />
                    </Border>
                </Popup>
                
                
                <Button x:Name="BackButton1"
                        Click="BackButton1_Click" TabIndex="7"
                    Grid.Row="6" 
                    Content="السابق"
                    Style="{StaticResource ContentButton}" 
                    HorizontalAlignment="Left"
                    Grid.ColumnSpan="2"
                    Margin="180 0 0 0"
                    />
                <Button Grid.Row="6" TabIndex="6"
                        x:Name="NextButton2"
                        Click="NextButton2_Click"
                    Content="التالي"
                    Style="{StaticResource ContentButton}" 
                    HorizontalAlignment="Left"
                    Grid.ColumnSpan="2"
                    >
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource AddStudentConverter}">
                            <Binding ElementName="FatherNameTextBox" Path="(Validation.HasError)"/>
                            <Binding ElementName="MotherNameTextBox" Path="(Validation.HasError)"/>
                            <Binding ElementName="PrimaryPhoneBox" Path="(Validation.HasError)"/>
                            <Binding ElementName="SecondaryPhoneTextBox" Path="(Validation.HasError)"/>
                            <Binding ElementName="FatherJobTextBox" Path="(Validation.HasError)"/>
                            <Binding ElementName="AddressTextBox" Path="(Validation.HasError)"/>
                            <Binding ElementName="FatherNameTextBox" Path="Text"/>
                            <Binding ElementName="PrimaryPhoneBox" Path="Text"/>
                            <Binding ElementName="FatherJobTextBox" Path="Text"/>
                            <Binding ElementName="AddressTextBox" Path="Text"/>
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="SubscriptionDetailsGroupBox"
              RenderTransformOrigin="0,0" 
              BorderThickness="1" 
              
              Header="تفاصيل الاشتراك" 
              Visibility="Hidden"
              d:Visibility="Visible"  
               TabIndex="0"
              >
            <GroupBox.BorderBrush>
                <LinearGradientBrush>
                    <GradientStop Color="#662D8C" Offset="1"/>
                    <GradientStop Color="#ED1E79" Offset=".1"/>
                </LinearGradientBrush>
            </GroupBox.BorderBrush>
            <Grid Margin="10 10 0 0">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock  Grid.Column="0"
                 Grid.Row="0"
                 Style="{StaticResource InputLabel}"
                 Text="تاريخ الاشتراك :"
                 HorizontalAlignment="Right"/>
                <TextBlock  Grid.Column="0"
                  Grid.Row="2"
                  Style="{StaticResource InputLabel}"
                  Text="تاريخ انتهاء الاشتراك :"
                  HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource InputLabel}"
                 Text="نوع الاشتراك :"
                 HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="3" Style="{StaticResource InputLabel}"
                 Text="قيمة الاشتراك :"
                 HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="4" Style="{StaticResource InputLabel}"
                           Text="المدفوع :"
                           HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="5" Style="{StaticResource InputLabel}"
                 Text="الفصل :"
                 HorizontalAlignment="Right"/>
                <DatePicker 
                    Margin="0 20 0 20" 
                    Grid.Column="1" 
                    TabIndex="0"
                    Grid.Row="0" 
                    Width="200"
                    SelectedDate="{Binding Path=SubscriptionDate, UpdateSourceTrigger=PropertyChanged}"
                    />
                <DatePicker 
                    Margin="0 20 0 20" 
                    Grid.Column="1" 
                    TabIndex="0"
                    Grid.Row="2" 
                    Width="200"
                    SelectedDate="{Binding Path=SubscriptionExpiryDate, UpdateSourceTrigger=PropertyChanged}"
                   />
                <Popup PlacementTarget="{Binding ElementName=NationalIdTextBox}"
                    Placement="Right"
                    AllowsTransparency="True"
                    StaysOpen="True"
                    IsOpen="{Binding Mode=OneWay, ElementName=NationalIdTextBox,Path=(Validation.Errors).Count,Converter={StaticResource CountToBoolConverter}}">
                    <Border Background="LightPink" BorderBrush="Red" BorderThickness="1" Padding="4">
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=NationalIdTextBox}" />
                    </Border>
                </Popup>
                <ComboBox 
                    Height="30" 
                    Margin="0 20 0 20" 
                    Grid.Column="1" 
                    Grid.Row="1" 
                    TabIndex="1"
                    VerticalContentAlignment="Center"
                    ItemsSource="{Binding Source={StaticResource SubscriptionTypes}}"
                    SelectedIndex="0"
                    SelectedItem="{Binding SubscriptionType, Mode=OneWayToSource}"/>
                <Popup PlacementTarget="{Binding ElementName=StudentNameTextBox}"
                   Placement="Right"
                   AllowsTransparency="True"
                   StaysOpen="True"
                   IsOpen="{Binding Mode=OneWay, ElementName=StudentNameTextBox,Path=(Validation.Errors).Count,Converter={StaticResource CountToBoolConverter}}">
                    <Border Background="LightPink" BorderBrush="Red" BorderThickness="1" Padding="4">
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=StudentNameTextBox}" />
                    </Border>
                </Popup>
                <ComboBox x:Name="SessionComboBox"
                    Height="30"  
                          Margin="0 20 0 20"
                          Grid.Column="1"
                          Grid.Row="5"
                          TabIndex="4"
                          ItemsSource="{Binding Classrooms}"
                          SelectedItem="{Binding SelectedClassroom, Mode=TwoWay}"
                          VerticalContentAlignment="Center"
                          VerticalAlignment="Center"
                          >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Rectangle Width="16" Height="16" Margin="0,0,5,0" Fill="{Binding ColorBrush}"  Stroke="Black"/>
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock d:Text="الكثافة الحالية 200 طالب"
                           d:Visibility="Visible"
                           Visibility="Hidden"
                           x:Name="StudentCountTextBlock"
                           Grid.Row="5"
                           Grid.Column="2"
                           Margin="10 0 0 0"
                           FontSize="15"
                           VerticalAlignment="Center"
                           Foreground="Red"
                           HorizontalAlignment="Right"
                           FontWeight="SemiBold"/>

                <TextBox Margin="0 20 0 20" 
                         Name="AmountTextBox"
                         Grid.Column="1" 
                         Grid.Row="3"
                         TabIndex="2"
                         Text="{Binding Path=SubscriptionAmount, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>

                <Popup PlacementTarget="{Binding ElementName=AmountTextBox}"
                       Placement="Right"
                       AllowsTransparency="True"
                       StaysOpen="True"
                       IsOpen="{Binding Mode=OneWay, ElementName=AmountTextBox,Path=(Validation.Errors).Count,Converter={StaticResource CountToBoolConverter}}">
                    <Border Background="LightPink" BorderBrush="Red" BorderThickness="1" Padding="4">
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=AmountTextBox}" />
                    </Border>
                </Popup>

                <TextBox Margin="0 20 0 20" 
         Name="PaymentAmountBox"
         Grid.Column="1" 
         Grid.Row="4"
         TabIndex="3"
         Text="{Binding Path=PaymentAmount, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>

                <Popup PlacementTarget="{Binding ElementName=PaymentAmountBox}"
                       Placement="Right"
                       AllowsTransparency="True"
                       StaysOpen="True"
                       IsOpen="{Binding Mode=OneWay, ElementName=PaymentAmountBox,Path=(Validation.Errors).Count,Converter={StaticResource CountToBoolConverter}}">
                    <Border Background="LightPink" BorderBrush="Red" BorderThickness="1" Padding="4">
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=PaymentAmountBox}" />
                    </Border>
                </Popup>


                <Button x:Name="BackButton2"
                        Click="BackButton2_Click"
                    Grid.Row="6" 
                    Content="السابق"
                    Style="{StaticResource ContentButton}" 
                    HorizontalAlignment="Left"
                    Grid.ColumnSpan="2"
                    Margin="180 0 0 0"
                        TabIndex="6"
                    />
                <Button Grid.Row="6"  Name="SaveStudentButton"
                    Content="حفظ"
                    Style="{StaticResource ContentButton}" 
                    HorizontalAlignment="Left"
                    Grid.ColumnSpan="2"
                        TabIndex="5" Click="SaveStudentButton_Click"
                    >
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource AddStudentConverter}">
                            <Binding ElementName="AmountTextBox" Path="(Validation.HasError)"/>
                            <Binding ElementName="PaymentAmountBox" Path="(Validation.HasError)"/>
                            <Binding ElementName="AmountTextBox" Path="Text"/>
                            <Binding ElementName="PaymentAmountBox" Path="Text"/>
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
            </Grid>
        </GroupBox>

    </Grid>
    
</UserControl>
