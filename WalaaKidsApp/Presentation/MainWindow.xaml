<Window x:Class="WalaaKidsApp.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WalaaKidsApp"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="برنامج ادارة الحضانة - ولاء كيدز" Height="650" Width="1024"
        FlowDirection="RightToLeft" Background="Transparent"
        WindowState="Normal"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        >
    <Border x:Name="MainBorder" CornerRadius="25" Background="#eff2f7" MouseDown="MainBorder_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Grid.Column="0" 
                   Margin="10 0 0 0" 
                   HorizontalAlignment="Left" 
                   Source="pack://application:,,,/Images/Logo.png"/>
            <TextBlock Text="Walaa Kids" FontSize="35"
                       FontFamily="Bradley Hand ITC"
                       FontWeight="Bold"
                       FontStyle="Italic"
                       VerticalAlignment="Center"
                       Grid.ColumnSpan="2"
                       Margin="100 0 0 0"
                       >
                <TextBlock.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="#662D8C" Offset="1"/>
                        <GradientStop Color="#ED1E79" Offset=".1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <Border Grid.Row="0" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2"
                    BorderThickness="0 0 0 3"
                    BorderBrush="#ED1E79"/>
            <Button x:Name="CloseButton"
                    Click="CloseButton_Click"
                Style="{StaticResource TopButton}" 
          HorizontalAlignment="Right"
          Grid.Column="1"
          Margin="0 0 5 0"
          Width="20" Height="20"
          >
                <Icon:PackIconMaterial Kind="Close" Width="15" Height="15" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
            </Button>
            <Button x:Name="MaximizeButton"
                    Click="MaximizeButton_Click"
                Style="{StaticResource TopButton}" 
          HorizontalAlignment="Right"
          Grid.Column="1"
          Margin="0 0 35 0"
          Width="20" Height="20"
>
                <Icon:PackIconMaterial Width="15" Height="15" Kind="WindowMaximize" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
            </Button>
            <Button x:Name="MinimizeButton"
                Style="{StaticResource TopButton}" 
          HorizontalAlignment="Right"
          Grid.Column="1"
          Margin="0 0 65 0"
          Width="20" Height="20" Click="MinimizeButton_Click"
          >
                <Icon:PackIconMaterial Kind="WindowMinimize" Width="15" Height="15" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
            </Button>
            <Border x:Name="SideMenu"
                    CornerRadius="0 50 0 25" 
                    Width="200"
                    Grid.Column="0"
                    Grid.Row="1"
                    >
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#662D8C" Offset="1"/>
                        <GradientStop Color="#ED1E79" Offset=".1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <StackPanel Orientation="Vertical">
                  
                   
                    <!--Menu Buttons-->
                    <StackPanel Margin="0 40 0 0">
                        <Button x:Name="DashboardButton"
                                Click="DashboardButton_Click"
                                Style="{StaticResource MenuButton}"
                                Height="30"
                                >
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Home" Margin="0 0 10 0"/>
                                <TextBlock Text="الرئيسية" FontWeight="ExtraBold" />
                            </StackPanel>
                        </Button>
                        <Expander BorderBrush="White"
                                  Foreground="White"
                                  FontSize="15" IsExpanded="True"
                                  Margin="0 10 0 10"
        >
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="HumanChild" Margin="0 0 10 0"/>
                                    <TextBlock FontWeight="ExtraBold" Text="الطلاب"/>
                                </StackPanel>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">
                                <Button x:Name="AddStudentButton"
                                    Style="{StaticResource MenuButton}" Height="30" 
                                         Click="AddStudentButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="Plus" Margin="0 0 10 0"/>
                                        <TextBlock Text="اضافة طالب جديد"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MenuButton}" 
                                        Height="30" 
                                        Name="ViewStudentsButton"
                                        Margin="15 0 0 0" 
                                        Click="ViewStudentsButton_Click"
                                        >
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="FormatListGroup" Margin="0 0 10 0"/>
                                        <TextBlock Text="عرض الطلاب"/>
                                    </StackPanel>
                                    
                                </Button>
                                <Button Style="{StaticResource MenuButton}" 
                                        Height="30" 
                                        Name="NotSubscripedButton"
                                        Margin="15 0 0 0" Click="NotSubscripedButton_Click" 
                                       
                                        >
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="History" Margin="0 0 10 0"/>
                                        <TextBlock Text="اشتراكات ملغاة - منتهية"/>
                                    </StackPanel>

                                </Button>
                            </StackPanel>

                        </Expander>

                        <Expander BorderBrush="White"
                          Foreground="White"
                          FontSize="15" IsExpanded="True"
                          Margin="0 10 0 10"
>
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="School" Margin="0 0 10 0"/>
                                    <TextBlock FontWeight="ExtraBold" Text="الفصول"/>
                                </StackPanel>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">
                                <Button x:Name="AddClassroomButton"
                                    Style="{StaticResource MenuButton}" 
                                        Height="30" Click="AddClassroomButton_Click" 
                                >
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="Plus" Margin="0 0 10 0"/>
                                        <TextBlock Text="فصل جديد"/>
                                    </StackPanel>
                                </Button>


                                <Button x:Name="ModifyDeleteClassroomButton"
                                        Style="{StaticResource MenuButton}" 
                                        Height="30" Click="ModifyDeleteClassroomButton_Click" 
>
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="Pencil" Margin="0 0 10 0"/>
                                        <TextBlock Text="حذف \ تعديل فصل"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                        </Expander>

                        <Expander BorderBrush="White"
                                  Foreground="White"
                                  FontSize="15" IsExpanded="True"
                                   Margin="0 10 0 10"
                                  >
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Bus" Margin="0 0 10 0"/>
                                    <TextBlock FontWeight="ExtraBold" Text="الباص"/>
                                </StackPanel>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">

                                <Button x:Name="ViewBusSubscriptionsButton" Click="ViewBusSubscriptionsButton_Click" Style="{StaticResource MenuButton}" Height="30" >
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial Kind="ListBox" Margin="0 0 10 0"/>
                                        <TextBlock Text="عرض الاشتراكات"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </StackPanel>
            </Border>
            <ContentControl x:Name="CurrentViewControl"
                Content="{Binding CurrentView}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent"
                Margin="15"
                Grid.Column="1"
                            Grid.Row="1"
                />
        </Grid>
    </Border>
</Window>
